---
import { Picture } from "@astrojs/image/components";

import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
const { region, content } = Astro.props;
---

<main
  class="bg-gray-100 shadow-xl bg-no-repeat grid lg:grid-cols-2 rounded-t-xl place-items-center mb-10">
  <div
    class="rounded-t-xl w-full h-[400px] py-2 md:order-1 hidden md:block px-4">
    <Picture
      class="rounded-t-xl"
      id="anchor"
      src={region}
      alt="PineCode Logo"
      widths={[200, 600, 800]}
      aspectRatio="20:14"
      sizes="(max-width: 800px) 100vw, 800px"
      loading="eager"
      format="avif"
    />
  </div>
  <div class="p-5">
    <h1
      class="text-5xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter">
      {content.headline}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {content.blurb}
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/contact"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-7s h-7" name="ic:baseline-contact-mail" />
        Get Started
      </Link>
    </div>
  </div>
</main>
