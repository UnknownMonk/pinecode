---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/heroshadow.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
const { content } = Astro.props;
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="w-[400px] h-[400px] py-6 md:order-0 hidden md:block">
    <Picture
      id="anchor"
      src={heroImage}
      alt="PineCode Logo"
      widths={[200, 600, 800]}
      aspectRatio="4:4"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div class="mt-[100px]">
    <h1
      class="text-5xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter">
      {content.headline}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {content.blurb}
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/contact"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-7s h-7" name="ic:baseline-contact-mail" />
        Get Started
      </Link>
    </div>
  </div>
</main>
